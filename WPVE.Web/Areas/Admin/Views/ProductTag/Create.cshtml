@model WPVE.Core.Domain.Catalog.ProductTag

@{
    ViewData["Title"] = "افزودن تگ ";
    ViewData["Parent_Title"] = "محصولات";
    ViewData["parent_menu"] = "navigationProducts";
}

<div class="col-md-4">
    <div class="card">
        <div class="card-body">
            
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="ذخیره" class="btn btn-success" />
                        <a class="btn btn-primary text-white" asp-action="Index">بازگشت به لیست</a>
                    </div>
                </form>
            </div>
        
    </div>
   
</div>

