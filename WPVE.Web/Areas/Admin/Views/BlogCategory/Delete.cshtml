@model WPVE.Core.Domain.Blogs.BlogCategory

@{
    ViewData["Title"] = "حذف دسته بندی";
}


<div class="card">
    <div class="card-header">
        <h3 class="text-danger"><i class="fa fa-trash"></i>آیا از حذف این دسته بندی اطمینان دارید</h3>
    </div>
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="حذف" class="btn btn-danger" />
            <a class="btn btn-primary text-white" asp-action="Index"> بازگشت به لیست</a>
        </form>
    </div>

</div>